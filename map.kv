#:import MapView kivy_garden.mapview.MapView

<MapViewTanker>:
	MapView:
		id: tankerMap
		lat: root.lat
		lon: root.lon
		zoom: root.zoom

<MDBottomNavigation>:
    #panel_color: "#eeeaea"
    selected_color_background: "green"
    text_color_active: "lightgrey"

<SettingsLayout>:
	BoxLayout:
		orientation: "vertical"
		Image:
			source: "images/tankericon.png"
		TextInput:
			id: plzInput
			hint_text: "PLZ"
			multiline: False
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			size_hint: (None, None)
			width: 100
			height: 30
		BoxLayout:
			orientation: "horizontal"
			padding: 50
			spacing: 10
			Button:
				id: typeMenu
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				size_hint: (1, .3)
				background_color: (0/255, 105/255, 168/255, 1)
				background_normal: ""
				text: "Spritsorte"
				on_release: root.typeDropdown()
			Button:
				id: radiusMenu
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				size_hint: (1, .3)
				background_color: (0/255, 105/255, 168/255, 1)
				background_normal: ""
				text: "Radius"
				on_release: root.radiusDropdown()
			Button:
				id: saveSettings
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				size_hint: (1, .3)
				background_color: (94/255, 165/255, 0/255, 1)
				background_normal: ""
				text: "Speichern"
				on_release: root.saveSettings()